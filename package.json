{
  "name": "juejin-posts",
  "displayName": "Juejin Posts",
  "version": "0.0.1",
  "description": " 掘金文章管理",
  "private": "true",
  "workspaces": [
    "web"
  ],
  "engines": {
    "vscode": "^1.59.0"
  },
  "categories": [
    "Other"
  ],
  "license": "MIT",
  "publisher": "luozhu",
  "repository": {
    "url": "https://github.com/youngjuning/luozhu.git"
  },
  "activationEvents": [
    "onCommand:juejin-posts.helloWorld"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "juejin-posts.helloWorld",
        "title": "Hello World"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn build:web && yarn esbuild-base --minify",
    "preesbuild-base": "rimraf out",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "esbuild": "yarn esbuild-base --sourcemap",
    "esbuild-watch": "yarn esbuild-base --sourcemap --watch",
    "web-build": "yarn workspace web run build",
    "web-watch": "yarn workspace web run start",
    "test-compile": "tsc -p ./",
    "lint": "eslint src --ext ts,tsx",
    "pretest": "yarn test-compile && yarn lint",
    "test": "node ./out/test/runTest.js",
    "commit": "git cz",
    "package": "vsce package --no-yarn"
  },
  "config": {
    "commitizen": {
      "path": "cz-customizable"
    }
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -e -V"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ],
    "**/*.{md,json,less}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@luozhu/eslint-config-react-typescript": "^1.5.0",
    "@luozhu/prettier-config": "^1.0.3",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.59.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "commitizen": "^4.2.4",
    "commitlint-config-cz": "^0.13.2",
    "cz-customizable": "^6.3.0",
    "esbuild": "^0.12.19",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "lint-staged": "^11.1.2",
    "mocha": "^8.2.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.1.3",
    "vsce": "^1.96.1",
    "vscode-test": "^1.5.0",
    "yorkie": "^2.0.0"
  }
}
